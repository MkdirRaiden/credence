{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "credence",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": "Ahmed 1996raiden27@gmail.com",
  "license": "MIT",
  "keywords": [
    "nestjs",
    "prisma",
    "typescript",
    "backend",
    "api"
  ],
  "description": "Credence backend application â€” a professional, scalable NestJS & Prisma backend with structured modules, logging, and API documentation.",
  "repository": {
    "type": "git",
    "url": "https://github.com/MkdirRaiden/credence.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
"scripts": {
  "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
  "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
  "build": "nest build",
  "start": "nest start",
  "start:dev": "nest start --watch",
  "start:debug": "nest start --debug --watch",
  "start:prod": "node dist/main",

  "test": "jest --passWithNoTests",
  "test:watch": "jest --watch",
  "test:cov": "jest --coverage",
  "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
  "test:unit": "jest --roots __tests__/unit",
  "test:integration": "NODE_ENV=test jest --roots __tests__/integration",
  "test:e2e": "jest --config ./__tests__/jest-e2e.json",
  
  "prisma:gen": "bash ./scripts/prisma/commands/merge-generate.sh",
  "prisma:fmt": "bash ./scripts/prisma/commands/format-validate.sh",
  "prisma:clean": "bash -c 'rm -rf node_modules/.prisma prisma/schema.prisma'",
  "prisma:studio": "bash ./scripts/prisma/commands/studio.sh",

  "prisma:migrate": "bash ./scripts/prisma/commands/migrate.sh",
  "prisma:deploy": "bash ./scripts/prisma/commands/deploy.sh",
  "prisma:reset": "bash ./scripts/prisma/commands/reset.sh",
  "prisma:rebuild": "bash ./scripts/prisma/commands/rebuild.sh"
},
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/terminus": "^11.0.0",
    "@prisma/client": "^6.17.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.6.4",
    "prettier": "^3.4.2",
    "prisma": "^6.16.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0"
  }
}
